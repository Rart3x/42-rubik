# ---------- Project ----------
PROJECT_NAME           = "YourProject (C++ API)"
PROJECT_NUMBER         = 0.1.0

# Local default output (for running doxygen locally).
# In CI we'll override OUTPUT_DIRECTORY to "site/cpp".
OUTPUT_DIRECTORY       = docs/_build/cpp

# Put the HTML files directly under OUTPUT_DIRECTORY (so CI ends up with site/cpp/index.html)
HTML_OUTPUT            = .
GENERATE_HTML          = YES
GENERATE_LATEX         = NO
GENERATE_XML           = NO

# ---------- Inputs ----------
# Point this to your actual C++ source/include roots
INPUT                  = include src
FILE_PATTERNS          = *.h *.hpp *.hh *.ipp *.c *.cc *.cpp *.cxx
RECURSIVE              = YES

# Ignore typical vendor/build dirs
EXCLUDE                = build third_party external .git
EXCLUDE_PATTERNS       = */build/* */third_party/* */external/*

# Shorter paths in the UI
FULL_PATH_NAMES        = NO
STRIP_FROM_PATH        = .

# ---------- Extraction & style ----------
EXTRACT_ALL            = YES           # document even if no comments yet
EXTRACT_PRIVATE        = NO            # flip to YES if you want private members
EXTRACT_STATIC         = YES
JAVADOC_AUTOBRIEF      = YES
MULTILINE_CPP_IS_BRIEF = YES
SOURCE_BROWSER         = YES
INLINE_SOURCES         = NO
REFERENCED_BY_RELATION = YES
REFERENCES_RELATION    = YES
GENERATE_TREEVIEW      = YES

# ---------- Warnings ----------
WARN_IF_UNDOCUMENTED   = YES
WARNINGS               = YES
WARN_AS_ERROR          = NO

# ---------- Markdown/README ----------
MARKDOWN_SUPPORT       = YES
# Point this at your README if you want it as the landing page
USE_MDFILE_AS_MAINPAGE = README.md

# ---------- Graphs/diagrams (needs graphviz) ----------
HAVE_DOT               = YES
DOT_IMAGE_FORMAT       = svg
INTERACTIVE_SVG        = YES
INCLUDE_GRAPH          = YES
INCLUDED_BY_GRAPH      = YES
CLASS_DIAGRAMS         = YES
CALL_GRAPH             = NO
CALLER_GRAPH           = NO
DOT_NUM_THREADS        = 0
